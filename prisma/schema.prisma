generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user      String     @id @default(cuid())
  profileImage String?    @default("https://th.bing.com/th/id/OIP.0uaGrLEY_HxDEyklFhqGXgAAAA?rs=1&pid=ImgDetMain")
  name         String
  email        String     @unique
  cpf          String?    @unique
  phone        String?
  address      String?
  password     String
  type         Perfil
  status       Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  deletedAt    DateTime?
  donation     Donation[]
  userOngs     UserOng[]
}

model Ong {
  id_ong       String     @id @default(cuid())
  profileImage String     @default("https://th.bing.com/th/id/OIP.0uaGrLEY_HxDEyklFhqGXgAAAA?rs=1&pid=ImgDetMain")
  name         String
  email        String     @unique
  description  String
  phone        String
  cnpj         String     @unique
  accessToken  String     @unique
  publicKey    String
  refreshToken String
  expiresIn    Int
  address      String
  context      OngType
  status       Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  deletedAt    DateTime?  @updatedAt
  userOngs     UserOng[]
  donation     Donation[]
}

model UserOng {
  id        String    @id @default(cuid())
  userId    String
  ongId     String
  joinedAt  DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  status    Boolean   @default(true)
  user      User      @relation(fields: [userId], references: [id_user])
  ong       Ong       @relation(fields: [ongId], references: [id_ong])
  @@unique([userId, ongId])
}

model Donation {
  id        String    @id @default(cuid())
  userId    String
  ongId     String
  amount    Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
  user      User      @relation(fields: [userId], references: [id_user])
  ong       Ong       @relation(fields: [ongId], references: [id_ong])
}

enum Perfil {
  ADMIN
  DONATOR
  ADMIN_ONG
}

enum OngType {
  ALIMENTOS
  UTENSILIOS_ADERECOS
  DIREITOS_HUMANOS
  MEIO_AMBIENTE
  CULTURA
  ANIMAIS
  SAUDE
  MORADIA
  TRANSPORTE
  EDUCACAO
  OUTROS
}
